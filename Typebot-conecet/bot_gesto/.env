# ===== App =====
APP_ENV=prod
SECRET_KEY=troque_esta_chave
TIMEZONE=America/Sao_Paulo

# ===== DB / Redis =====
DATABASE_URL=postgresql+psycopg2://user:pass@host:5432/dbname
REDIS_URL=redis://default:pass@host:6379/0
REDIS_STREAM=buyers_stream

# ===== Facebook (1 pixel) =====
FB_API_VERSION=v20.0
FB_PIXEL_ID=xxxxxxxxxxxxxxx
FB_ACCESS_TOKEN=EAAG...
FB_ACTION_SOURCE=website
FB_DROP_OLDER_THAN_DAYS=7

# ===== Google (modo GA4 por padrão) =====
GOOGLE_ENABLED=true
GOOGLE_MODE=GA4           # GA4 | ADS (se quiser Ads, eu te passo o bloco depois)
GA4_MEASUREMENT_ID=G-XXXXXXX
GA4_API_SECRET=xxxxxxxxxxxx
# client_id fallback (se não houver), use algo estável como telegram_id
GA4_CLIENT_ID_FALLBACK_PREFIX=tlgrm-

# ===== Eventos (escopo fixo) =====
ENABLE_PURCHASE=false      # deixamos só Lead/Subscribe
SEND_LEAD_ON=botb          # chave de roteamento
SEND_SUBSCRIBE_ON=vip

# ===== Opções de deduplicação =====
EVENT_ID_SALT=use_uma_frase_longa_aleatoria